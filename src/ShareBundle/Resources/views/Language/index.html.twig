{% extends "::base.html.twig" %}

{% block title %}Liste des Languages{% endblock %}

{% block body %}
<h1>Les languages</h1>

    <table>
        <thead>
            <tr>
                <th>Libell√© du language</th>
                <th>Utilisateurs</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for language in languages %}
                <tr>
                    <td>
                        {{ language.lngDev }}
                    </td>
                    {#{{ dump(language.users) }}#}
                    <td>
                        {% for user in language.users %}
                            {{ user.username }}<br/>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('language_edit', {'id': language.id}) }}">Modifier</a>
                        <a href="{{ path('language_delete', {'id': language.id}) }}">Supprimer</a>
                    </td>
                </tr>
            </tbody>
        {% endfor %}
    </table>

    <ul>
        <li>
            <a href="{{ path('language_new') }}">Ajout language</a>
        </li>
    </ul>

{% endblock %}
